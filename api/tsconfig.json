{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "lib": [
      "es5",
      "es6"
    ],
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}